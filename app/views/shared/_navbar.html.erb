<div class="relative font-body bg-transparent z-10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="flex justify-between items-center py-6 md:justify-start md:space-x-10">
      <div class="flex justify-start lg:w-0 lg:flex-1">
        <a href="#">
          <span class="sr-only">Workflow</span>
          <img class="h-8 w-auto sm:h-10" src="https://tailwindui.com/img/logos/workflow-mark-white.svg" alt="">
        </a>
      </div>
      <nav class="hidden md:flex space-x-10">
        <div class="flex items-center bg-white shadow-md w-full rounded-full py-2 pl-6 pr-2 ">
          <%= simple_form_for :search, url: appartments_path, method: :get  do |f|%>
            <div class="flex flex-row items-center">
              <%= f.input :address, label: "Adresse", placeholder: 'Où allez-vous ?', required: false, wrapper_html: { class: 'flex flex-col cursor-pointer pr-3' }, input_html: { class: 'pl-0 py-0 border-none focus:outline-none focus:border-none focus:border-width-0 text-sm font-light' }, label_html: { class: 'text-xs font-bold' } %>
              <%= f.input :start_date, label: "Arrivée", input_html: { min: 1 }, placeholder: 'Ajoutez des dates', as: :numeric, required: false, wrapper_html: { class: 'flex flex-col cursor-pointer pr-3' }, input_html: { class: 'pl-0 py-0 border-none text-sm font-light' }, label_html: { class: 'text-xs font-bold' } %>
              <%= f.input :end_date, label: "Départ", input_html: { min: 1 }, placeholder: 'Ajoutez des dates', as: :numeric, required: false, wrapper_html: { class: 'flex flex-col cursor-pointer pr-3' }, input_html: { class: 'pl-0 py-0 border-none  text-sm font-light' }, label_html: { class: 'text-xs font-bold' } %>
              <%= button_tag type: 'submit', class: "bg-rose-500 hover:bg-rose-600 flex items-center justify-center h-12 w-12 rounded-full" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
              <% end %>
            </div>
          <% end %>
        </div>
      </nav>
      <div class="hidden md:flex items-center justify-end md:flex-1 lg:w-0">
        <a href="#" class="whitespace-nowrap text-base font-light text-white hover:text-gray-200">
          Connexion
        </a>
        <a href="#" class="ml-8 whitespace-nowrap inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-rose-600 hover:bg-rose-700">
          Inscription
        </a>
      </div>
    </div>
  </div>
</div>
