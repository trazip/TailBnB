<div class="grid grid-flow-col grid-cols-1 md:grid-cols-2 h-screen">
  <div class="relative flex flex-col justify-start items-center pt-32 px-12 pb-12 ">
    <h1 class="font-bold font-title text-5xl">Let's get started <%= current_user.first_name %>...</h1>
    <%= simple_form_for(@appartment, :html=> { class: 'w-full mt-16 h-56 justify-self-end' } ) do |f| %>
      <div class="form-inputs">
        <%= f.input :address,
                    :label => "Where do you live?",
                    required: false,
                    autofocus: true,
                    placeholder: '33 rue de Madrid, Paris, 75008, France',
                    input_html: { id: 'aloglia_search_address', autocomplete: "off", class: "mt-2 focus:ring-gray-800 focus:border-gray-800 block w-full pr-12 py-6 sm:text-sm border-gray-300 rounded-md mb-2" },
                    label_html: { class: "text-sm font-bold" } %>
        <%= f.input :price,
                    :label => "How much would like to earn per night?",
                    required: false,
                    autofocus: true,
                    placeholder: '50â‚¬',
                    wrapper_html: { class: "mt-6" },
                    input_html: { autocomplete: "off", class: "mt-2 focus:ring-gray-800 focus:border-gray-800 block w-full pr-4 py-4 sm:text-sm border-gray-300 rounded-md mb-2" },
                    label_html: { class: "text-sm font-bold" } %>
      </div>
      <div class="form-actions mt-8">
        <%= f.button :submit, "Continue", class: "w-full cursor-pointer inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-4 mb-2 bg-rose-600 text-base font-medium text-white hover:bg-rose-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:text-sm" %>
      </div>
    <% end %>
    <%= link_to :back, class: "absolute flex items-center justify-center bottom-12 left-12 p-2 rounded-full bg-rose-600 hover:bg-rose-500 w-auto cursor-pointer" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevron-left"><polyline points="15 18 9 12 15 6"></polyline></svg>
    <% end %>
  </div>
  <div class="hidden md:block">
    <img class="w-full object-cover h-screen" src="https://images.unsplash.com/photo-1583847268964-b28dc8f51f92?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=668&q=80" alt="">
  </div>
</div>
